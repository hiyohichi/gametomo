<% if current_user.following?(user) %>
  <%= link_to "フォロー外す", user_relationships_path(user.id), class: "btn btn-secondary btn-sm", method: :delete, remote: true %>
<% else %>
  <%= link_to "フォローする", user_relationships_path(user.id), class: "btn btn_success btn-sm", method: :post, remote: true %>
<% end %>