<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>編集画面</h2>
      <!--バリデーションメッセージ-->
      <div>
      <% if @user.errors.any? %>
        <h3><%= @user.errors.count %> errors prohibited this obj from being saved:</h3>
        <ul>
          <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
          <%end%>
        </ul>
      <%end%>
      </div>
      
      <%= form_with model:@user do |f| %>
      <div>
        <label for="inputImage">Image</label>
        <%= f.file_field :profile_image,placeholder:"プロフィール画像",accept:"image/*" %>
      </div>
      <div>
        <label for="inputName">Name</label>
        <%= f.text_field :name, autofocus:true,id:"inputName",placeholder:"名前" %>
      </div>
      <div>
        <label for="inputIntroduction">Introduction</label>
        <%= f.text_field :introduction, autofocus:true,id:"inputIntroduction" %>
      </div>
      <div>
        <label>プラットフォーム</label>
          <% @genres.each do |genre| %>
            <%= f.check_box :pratform,
                            { multiple: true,
                              checked: @game.genre.present? ? @game.genre.split(",").include?(genre) : false },
                              genre, nil %>
            <%= f.label genre.pratform %><br>
          <% end %>
      </div>
      <div>
        <%= f.submit "変更を保存",class: "btn btn-secondary" %>
      </div>
      <%end%>
    </div>
  </div>
</div>
