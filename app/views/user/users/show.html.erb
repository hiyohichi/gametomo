<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <h2>プロフィール</h2>
      <div>
        <%= image_tag @user.get_profile_image(100,100) %>
      </div>
      <table>
        <tr>
          <th>名前</th>
          <th><%= @user.name %></th>
        </tr>
        <tr>
          <th>紹介文</th>
          <th><%= @user.introduction %></th>
        </tr>
        <tr>
          <th>プラットフォーム</th>
          <th><% @user.genres.each do |genre| %>
              <%= genre.pratform %>
              <% end %></th>
        </tr>
      <!--フォロー数、フォロワー数-->
        <tr>
          <th>follows</th>
          <th>
            <%= link_to user_followings_path(@user) do %>
              <%= @user.followings.count %>
            <%end%>
          </th>
        </tr>
        <tr>
          <th>followers</th>
          <th>
            <%= link_to user_followers_path(@user) do %>
              <%= @user.followers.count %>
            <%end%>
          </th>
        </tr>
      </table>
      <!--ゲストユーザー用編集ボタンを非表示-->
      <% if @user.guest_user? %>
        <div></div>
      <% elsif @user==current_user %>
        <div class="row">
          <%=link_to edit_user_path(@user), class: 'btn btn-outline-secondary btn-block' do %>
            <i class="fas fa-user-cog"></i>
         <%end%>
        </div>
      <%else%>
        <div class='row' >
        <!--フォローボタン-->
          <div id="relationship_btns_<%= @user.id %>"><%= render 'user/relationships/btn', user: @user %></div>
        <!--チャットボタン-->
          <% if current_user != @user && current_user.following?(@user) && @user.following?(current_user) %>
            <%= link_to message_path(@user.id), class: "btn btn-success ml-3" do %>
              <i class="far fa-comments"></i>
            <% end %>
          <% end %>
        </div>
      <%end%>

  </div>
    <div class="col-md-8 offset-md-1">
      <h2>Comments</h2>
      <table>
        <thead>
          <tr>
            <th>Title</th>
            <th>Comment</th>
          </tr>
        </thead>
        <tbody>
          <% @comments.each do |comment| %>
          <tr>
            <td>
              <%= link_to game_path(comment.game.id) do %>
                <%= image_tag comment.game.get_game_image(80,80) %><br>
                <%= comment.game.title %>
              <%end%>
            </td>
            <td><%= comment.comment %></td>
            <td id="nice_buttons_<%= comment.id %>"><%= render 'user/comments/nice', comment: comment %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
