<div class="container">
  <div class="row">
    <div class="col">
      <h4 class="m-3">ゲーム一覧</h4>
    </div>
    <!--ゲーム新規登録ボタン-->
    <div class="col text-right m-3">
      <%= link_to "+", new_admin_game_path, class:"btn btn-success" %>
    </div>
  </div>
  <div class="row">
    <div class="col">
      <table class="table table-hover">
        <thead>
          <tr class="table-secondary">
            <th>イメージ</th>
            <th>タイトル</th>
            <th>プラットフォーム</th>
            <th>コメント数</th>
            <th>ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @games.each do |game| %>
          <tr>
            <td><%= image_tag game.get_game_image(80,80) %></td>
            <td><%= link_to game.title,admin_game_path(game.id) %></td>
            <td><% game.genres.each do |genre|%>
                <%= genre.pratform %>
                <% end %></td>
            <td><% game.comments.each do |comment| %>
                <%= comments.count %>
                <% end %></td>
            <td><span style="color:green;"><%= game.is_active? ? '起動中' : '停止中' %></td>
          </tr>
         <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
