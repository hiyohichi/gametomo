<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <h2>Game</h2>
      <div>
        <%= image_tag @game.get_game_image(100,100) %>
      </div>
      <table>
        <tr>
          <th>タイトル</th>
          <th><%= @game.title %></th>
        </tr>
        <tr>
          <th>紹介文</th>
          <th><%= @game.introduction %></th>
        </tr>
        <tr>
          <th>プラットフォーム</th>
          <th><% @game.genres.each do |genre| %>
              <%= genre.pratform %>
              <% end %></th>
        </tr>
      </table>
    </div>

    <div class="col-md-8 offset-md-1">
      <h2>投稿</h2>
      <table>
        <tbody>
          <% @game.comments.each do |comment| %>
          <tr>
            <td>
              <%= link_to admin_user_path(comment.user) do %>
                <%= image_tag comment.user.get_profile_image(50,50) %><br>
                <%= comment.user.name %>
              <%end%>
            </td>
            <td><%= comment.comment %></td>
          </tr>
          <%end%>
        </tbody>
      </table>
    </div>
  </div>
</div>