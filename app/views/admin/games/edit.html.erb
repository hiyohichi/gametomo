<div class="container">
  <div class="row">
    <h3>編集</h3>
  </div>
  <div class="row">
   <div class="col-3" >
    </div>
    <div class="col-6">
      <%= form_with model:@game,url:admin_game_path, method: :patch do |f| %>
        <table>
          <tbody>
            <tr>
              <td>イメージ画像</td>
              <td>
                <%= f.file_field :image, accept: "image/*" %>
              </td>
            </tr>
            <tr>
              <td>タイトル</td>
              <td>
                <%= f.text_field :name, rows:'3', placeholder: "商品名" %>
              </td>
            </tr>
            <tr>
              <td>紹介文</td>
              <td>
                <%= f.text_area :introduction, rows:'6', placeholder: "商品説明"  %>
              </td>
            </tr>
            <tr>
              <td>プラットフォーム</td>
              <td>
                <% @genres.each do |genre| %>
                    <%= f.check_box :pratform,
                                    { multiple: true,
                                      checked: @game.genre.present? ? @game.genre.split(",").include?(genre) : false },
                                      genre, nil %>
            　　      <%= f.label genre.pratform %><br>
                  <% end %>
              </td>
            </tr>
            <tr>
              <td>ステータス</td>
              <td>
                <p><%= f.radio_button :is_active, :true %>起動中</p>
                <p><%= f.radio_button :is_active, :false %>停止中</p>
              </td>
            </tr>
            <tr>
              <td>
              <%= f.submit "変更を保存",class: "btn btn-success" %>
              </td>
            </tr>
          </tbody>
        </table>
        <% end %>
      </div>
    <div class="col-3"></div>
  </div>
</div>