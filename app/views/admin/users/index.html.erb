<div class="container">
  <div class="row">
    <div class="col">
      <h4 class="m-3">会員一覧</h4>
        <table class="table table-hover">
          <thead>
            <tr class="table-secondary">
              <th>会員ID</th>
              <th>氏名</ht>
              <th>メールアドレス</th>
              <th>ステータス</th>
            </tr>
          </thead>
          <% @users.each do |user| %>
            <tr>
              <td><%= user.id %></td>
              <td><%= link_to user.name, admin_user_path(user) %></td>
              <td><%= user.email %></td>
              <td><%= user.user_status %></td>
            </tr>
          <% end %>
        </table>
    </div>
  </div>
</div>